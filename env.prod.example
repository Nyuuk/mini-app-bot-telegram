# Production Environment Configuration
# Copy this file to .env.prod and update the values

# Database Configuration
POSTGRES_DB=mini_app_bot_telegram_prod
POSTGRES_USER=app_user
POSTGRES_PASSWORD=your_super_secure_password_here
POSTGRES_PORT=5432

# Backend Configuration
BACKEND_PORT=3000
ENV=production
LOG_LEVEL=warn
JWT_SECRET_KEY=your_super_secure_jwt_key_for_production_here
JWT_EXPIRATION=24

# Docker Registry Configuration (for GitHub Actions)
DOCKER_REGISTRY=ghcr.io
GITHUB_REPOSITORY=your-username/mini-app-bot-telegram
VERSION=latest

# Optional: SSL Configuration
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/key.pem

# Optional: External Services
# REDIS_URL=redis://localhost:6379
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
